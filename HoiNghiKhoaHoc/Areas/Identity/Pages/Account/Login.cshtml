@page
@model LoginModel

@{
	Layout = null;
	ViewData["Title"] = "Đăng nhập";
}

<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"]</title>
	<link href="/css/style.css" rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<!-- Bọc toàn bộ vào 1 container chiếm full chiều cao -->
<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
	<div class="row justify-content-center w-100">
		<div class="col-md-4">
			<section>
				<div class="border p-4 shadow-sm" style="border-radius: 1.5rem">
					<h2 class="text-center mb-4">Đăng nhập</h2>
					<!-- FORM LOGIN -->
					<form id="account" method="post">
						@* <h2 class="text-center">Use a local account to log in.</h2> *@
						<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
						<div class="mb-3" style="border-radius: 1.5rem">
							<label for="Input_Email" class="form-label" >Email</label>
							<input asp-for="Input.Email" class="form-control" placeholder="Nhập email" style="border-radius: 1.5rem" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="mb-3" >
							<label for="Input_Password" class="form-label">Mật khẩu</label>
							<input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" style="border-radius: 1.5rem" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="checkbox mb-3">
							<label asp-for="Input.RememberMe" class="form-label">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
						<div>
							<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>
						</div>
						<div class="mt-3 text-center login-link">
							<p><a id="forgot-password" class="login-link-item" asp-page="./ForgotPassword">Quên mật khẩu?</a></p>
							<p><a class="login-link-item" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Tạo tài khoản</a></p>
							@* <p><a id="resend-confirmation" class="login-link-item" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p> *@
							<p><a class="login-link-item" asp-controller="Conferences" asp-action="Index">Quay lại</a></p>
						</div>
					</form>
				</div>
			</section>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
