@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>

@{
    ViewData["Title"] = "Danh sách Hội nghị";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .conference-card {
        display: inline-block;
        width: 300px;
        margin: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
        vertical-align: top;
    }

        .conference-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .conference-card .content {
            padding: 10px;
        }

        .conference-card h3 {
            font-size: 18px;
            margin: 0 0 10px;
            color: #333;
        }

        .conference-card p {
            font-size: 14px;
            margin: 5px 0;
            color: #666;
        }

        .conference-card .details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background: #fff;
        }

            .conference-card .details a {
                text-decoration: none;
                color: #fff;
                font-weight: bold;
                margin: 0 5px;
            }
</style>

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div>
    @foreach (var item in Model)
    {
        <div class="conference-card">
            @if (!string.IsNullOrEmpty(item.BannerImage))
            {
                <img src="@Url.Content("~/uploads/" + item.BannerImage)" alt="Conference Image" />
            }
            else
            {
                <img src="@Url.Content("~/images/no-image.jpg")" alt="No Image" />
            }


            <div class="content">
                <h3>@item.Title</h3>
                <p><strong>Thời gian:</strong> @item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")</p>
                <p><strong>Địa điểm:</strong> @item.Location</p>
                <p>@item.Description</p>
            </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-area="Admin">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-area="Admin">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
