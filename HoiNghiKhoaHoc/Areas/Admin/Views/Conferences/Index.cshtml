@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>

@{
    ViewData["Title"] = "Danh sách Hội nghị";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .conference-card {
        display: inline-block;
        width: 300px;
        margin: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
        vertical-align: top;
    }

        .conference-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .conference-card .content {
            padding: 10px;
        }

        .conference-card h3 {
            font-size: 18px;
            margin: 0 0 10px;
            color: #333;
        }

        .conference-card p {
            font-size: 14px;
            margin: 5px 0;
            color: #666;
        }

        .conference-card .details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background: #f8f9fa;
        }

            .conference-card .details a {
                text-decoration: none;
                color: #fff;
                font-weight: bold;
                margin: 0 5px;
            }
</style>

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div>
    @foreach (var item in Model)
    {
        <div class="conference-card">
            @if (!string.IsNullOrEmpty(item.BannerImage))
            {
                <img src="@Url.Content("~/uploads/" + item.BannerImage)" alt="Conference Image" />
            }
            else
            {
                <img src="@Url.Content("~/images/no-image.jpg")" alt="No Image" />
            }


            <div class="content">
                <h3>@item.Title</h3>
                <p><strong>Thời gian:</strong> @item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")</p>
                <p><strong>Địa điểm:</strong> @item.Location</p>
                <p>@item.Description</p>
            </div>

            <div class="details">
                <div>
                    <a asp-area="Admin" asp-controller="Conferences" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-controller="Conferences" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    <a asp-area="Admin" asp-controller="Conferences" asp-action="ConferenceDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
