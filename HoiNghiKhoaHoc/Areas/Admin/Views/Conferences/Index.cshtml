@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>

@{
    ViewData["Title"] = "Quản lý hội nghị";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 mb-4">@ViewData["Title"]</h1>
    <a asp-controller="Conferences" asp-action="Create" asp-area="Admin" class="btn btn-success">Thêm hội nghị</a>
</div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.BannerImage))
                    {
                        <img src="@(Url.Content("~" + item.BannerImage))" class="card-img-top" alt="@item.BannerImage" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">
                            <strong>Mô tả:</strong> @item.Description<br />
                            <strong>Thời gian:</strong> @item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()<br />
                            <strong>Địa điểm:</strong> @item.Location<br />
                            <strong>Trạng thái:</strong>
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                @(item.IsActive ? "Đang hoạt động" : "Ngưng hoạt động")
                            </span>
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <form asp-controller="Conferences" asp-action="Details" asp-area="Admin" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Duyệt hội nghị</button>
                        </form>
                        <a asp-controller="Conferences" asp-action="Update" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                        <form asp-controller="Conferences" asp-action="ToggleStatus" asp-area="Admin" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">
                                @(item.IsActive ? "Tắt hoạt động" : "Bật lại")
                            </button>
                        </form>
                        <form asp-controller="Conferences" asp-action="Delete" asp-area="Admin" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xoá hội nghị này?');" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Xoá</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
