@model HoiNghiKhoaHoc.Models.Conference
@{
    ViewData["Title"] = "Chi tiết Hội nghị - Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .conference-card {
        width: 300px;
        margin: 20px auto;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
    }

        .conference-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .conference-card .content {
            padding: 10px;
        }

        .conference-card h3 {
            font-size: 18px;
            margin: 0 0 10px;
            color: #007bff;
        }

        .conference-card p {
            font-size: 14px;
            margin: 5px 0;
            color: #666;
        }

        .conference-card .details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background: #f8f9fa;
        }

            .conference-card .details a {
                text-decoration: none;
                color: #007bff;
                font-weight: bold;
                margin-left: 5px;
            }

                .conference-card .details a:hover {
                    text-decoration: underline;
                }
</style>

<h2>@ViewData["Title"]</h2>

<div class="conference-card">
    <img src="https://via.placeholder.com/300x150" alt="Conference Image" />
    <div class="content">
        <h3>@Model.Title</h3>
        <p>Thời gian: @Model.StartDate.ToString("dd/MM/yyyy HH:mm") - @Model.EndDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p>Địa điểm: @Model.Location</p>
        <p>We invite you to submit your work to the International Conference on Environmental Design (ICED2025), 1-2 November 2025, Heraklion, Crete, Greece and Virtual.</p>
    </div>
    <div class="details">
        <div>
            @* <a asp-area="Admin" asp-action="Create" class="btn btn-primary">Thêm</a> *@
            @* <a asp-area="Admin" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a> *@
            @* <a asp-area="Admin" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a> *@
            @* <a asp-area="Admin" asp-action="ConferenceDetails" asp-route-id="@Model.Id" class="btn btn-info">Xem chi tiết</a> *@
        </div>
    </div>
</div>
<a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a>