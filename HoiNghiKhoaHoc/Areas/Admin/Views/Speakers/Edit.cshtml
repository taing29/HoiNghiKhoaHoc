@model HoiNghiKhoaHoc.Models.Speaker
@{
    ViewData["Title"] = "Chỉnh sửa diễn giả";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Chỉnh sửa diễn giả</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Affiliation" class="form-label"></label>
        <input asp-for="Affiliation" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PhotoUrl" class="form-label"></label>
        <input asp-for="PhotoUrl" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Bio" class="form-label"></label>
        <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

