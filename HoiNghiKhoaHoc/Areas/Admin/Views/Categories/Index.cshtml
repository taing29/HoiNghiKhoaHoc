@model IEnumerable<HoiNghiKhoaHoc.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-controller="Categories" asp-action="Create" asp-area="Admin" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle mb-0">
                    <thead class="table-light text-center">
                        <tr>
                            <th style="width: 10%;">ID</th>
                            <th style="width: 60%;">Tên danh mục</th>
                            <th style="width: 30%;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@item.Id</td>
                                <td class="text-start ">@item.Name</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="Categories"
                                           asp-action="Edit"
                                           asp-area="Admin"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i> Sửa
                                        </a>
                                        <a asp-controller="Categories"
                                           asp-action="Delete"
                                           asp-area="Admin"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Bạn có chắc chắn muốn xoá danh mục này?');">
                                            <i class="bi bi-trash"></i> Xoá
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
