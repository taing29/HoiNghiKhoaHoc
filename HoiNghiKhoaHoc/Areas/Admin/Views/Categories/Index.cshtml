@model IEnumerable<HoiNghiKhoaHoc.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h2 mb-4">@ViewData["Title"]</h2>
        <a asp-controller="Categories" asp-action="Create" asp-area="Admin" class="btn btn-success">Thêm mới</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Categories"
                               asp-action="Edit"
                               asp-area="Admin"
                               asp-route-id="@item.Id"
                               class="btn btn-primary btn-sm me-2">
                                Sửa
                            </a>
                            <a class="btn btn-danger btn-sm"
                               onclick="return confirm('Bạn có chắc chắn muốn xoá danh mục này?');"
                               asp-controller="Categories"
                               asp-action="Delete"
                               asp-area="Admin"
                               asp-route-id="@item.Id">
                                Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
