@model HoiNghiKhoaHoc.Models.UserView

@{
    ViewData["Title"] = "Xác nhận xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xác nhận xóa</h2>

<h4>Bạn có chắc chắn muốn xóa người dùng này không?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Tên đăng nhập</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Họ tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
</dl>

<form asp-action="DeleteUser" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button> |
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
