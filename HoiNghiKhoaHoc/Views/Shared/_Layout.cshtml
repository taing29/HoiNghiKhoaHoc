    <style>
        /* Thanh menu chính */
        /* Thanh menu chính */
        /* ======= NAVBAR ======= */
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #1B5E20; /* Xanh lá đậm */
            padding: 10px 20px;
            color: white;
            flex-wrap: wrap;
        }

        .menu-icon {
            font-size: 24px;
            cursor: pointer;
            margin-right: 15px;
            display: none; /* ẩn mặc định desktop */
        }

        .logo img {
            height: 40px;
            margin-right: 20px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            flex: 1;
            justify-content: center;
            padding: 0;
            margin: 0;
            flex-wrap: wrap;
        }

            .nav-links li {
                margin: 0 10px;
                padding: 10px 15px;
                border-radius: 6px;
                transition: 0.3s;
            }

                .nav-links li:hover {
                    background-color: #2E7D32; /* Hover xanh lá tươi nhưng đậm */
                    transform: scale(1.05);
                }

                .nav-links li a {
                    text-decoration: none;
                    color: white;
                    font-weight: bold;
                    text-transform: uppercase;
                    font-size: 13px;
                }

        .user-icon img {
            height: 30px;
            width: 30px;
            border-radius: 50%;
        }

        /* ======= RESPONSIVE NAVBAR ======= */


        /* ======= PHẦN NỘI DUNG ======= */
        .news-card {
            background: #F1F8E9; /* Xanh nhạt nhẹ nhàng */
            border-radius: 10px;
            padding: 20px;
            margin: 20px auto;
            max-width: 800px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .news-card img {
                width: 100%;
                height: auto;
                margin: 10px 0;
            }

        /* ======= FOOTER ======= */
        .footer-tl {
            background-color: #1B5E20; /* Đồng bộ navbar */
            color: white;
            padding: 20px 30px;
            font-size: 14px;
            margin-top: 40px;
        }

        .footer-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
        }

        .footer-left {
            flex: 1 1 60%;
            max-width: 60%;
        }

            .footer-left a {
                color: #A5D6A7; /* Xanh lá sáng nhẹ */
                text-decoration: none;
            }

        .footer-right {
            flex: 1 1 35%;
            max-width: 35%;
            text-align: right;
        }

            .footer-right a {
                color: white;
                text-decoration: none;
                margin: 0 5px;
                font-weight: bold;
            }

        /* Icon mạng xã hội */
        .social-icons {
            margin-top: 10px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 12px;
        }

            .social-icons img {
                height: 28px;
                width: 28px;
                cursor: pointer;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                border-radius: 50%;
            }

                .social-icons img:hover {
                    transform: scale(1.2);
                    box-shadow: 0 4px 8px rgba(46, 125, 50, 0.4); /* Bóng hover xanh đậm */
                }

        /* ======= RESPONSIVE FOOTER ======= */

        .footer-right {
            text-align: left;
            margin-top: 15px;
            max-width: 100%;
            flex: 1 1 100%;
        }

        .footer-left {
            max-width: 100%;
            flex: 1 1 100%;
        }

        .social-icons {
            justify-content: flex-start;
            margin-top: 15px;
        }

        }
    </style>
</head>
