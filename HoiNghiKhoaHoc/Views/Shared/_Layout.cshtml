@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <style>
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #0066cc;
            padding: 10px 20px;
            color: white;
        }

        .nav-links {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

            .nav-links li {
                margin: 0 10px;
                padding: 10px 15px;
                border-radius: 6px;
                transition: 0.3s;
            }

                .nav-links li:hover {
                    background-color: #0055aa;
                    transform: scale(1.05);
                }

                .nav-links li a {
                    color: white;
                    text-decoration: none;
                    font-weight: bold;
                    text-transform: uppercase;
                    font-size: 13px;
                }

        .user-icon {
            position: relative;
            cursor: pointer;
        }

            .user-icon img {
                height: 32px;
                width: 32px;
                border-radius: 50%;
            }

        .dropdown {
            display: none;
            position: absolute;
            right: 0;
            top: 100%;
            background-color: #0055aa;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            min-width: 180px;
        }

            .dropdown.active {
                display: block;
            }

            .dropdown a, .dropdown form button {
                display: block;
                padding: 10px 15px;
                color: white;
                text-decoration: none;
                font-size: 14px;
                background: none;
                border: none;
                width: 100%;
                text-align: left;
            }

                .dropdown a:hover, .dropdown form button:hover {
                    background-color: #004488;
                }

        footer.footer-tl {
            background-color: #0066cc;
            color: white;
            padding: 30px;
            font-size: 14px;
            margin-top: 40px;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .social-icons img {
            width: 28px;
            margin-right: 12px;
            border-radius: 50%;
            transition: 0.3s ease;
        }

            .social-icons img:hover {
                transform: scale(1.2);
            }
    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <ul class="nav-links">
                <li>@Html.ActionLink("Trang chủ", "Index", "Conferences")</li>
                <li>@Html.ActionLink("Hội nghị sắp diễn ra", "Upcoming", "Conferences")</li>
                <li>@Html.ActionLink("Hội nghị đã diễn ra", "Past", "Conferences")</li>
                <li>@Html.ActionLink("Hội nghị trên thế giới", "International", "Conferences")</li>
            </ul>

            <form asp-controller="Conferences" asp-action="Index" method="get" class="d-flex me-3">
                <input type="text" name="searchString" value="@ViewBag.Search" class="form-control form-control-sm rounded-pill me-2" placeholder="🔍 Tìm kiếm..." />
                <button type="submit" class="btn btn-light btn-sm rounded-pill">🔍 </button>
            </form>

            <div class="user-icon" onclick="toggleDropdown()">
                <img src="@(
                                         SignInManager.IsSignedIn(User)
                                             ? UserManager.GetUserAsync(User).Result?.AvatarPath ?? "https://cdn-icons-png.flaticon.com/512/747/747376.png"
                                             : "https://cdn-icons-png.flaticon.com/512/747/747376.png"
                                )" alt="Avatar" />
                <div class="dropdown" id="userDropdown">
                    @if (SignInManager.IsSignedIn(User))
                                        {
                                        var user = await UserManager.GetUserAsync(User);
                    <div class="px-3 py-2 text-white fw-bold">Xin chào, @user.FullName!</div>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản</a>
                    <a asp-controller="Conferences" asp-action="MyFavorites">❤️ Yêu thích</a>
                    <a asp-controller="Conferences" asp-action="MyRegistrations">📋 Đăng ký</a>

                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                        <button type="submit">Đăng xuất</button>
                    </form>
                                        }
                                        else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                        <a asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                    }
                </div>
            </div>
        </div>
    </header>

    @RenderBody()
    @RenderSection("Scripts", required: false)

    <footer class="footer-tl">
        <div class="footer-container">
            <div style="flex: 1; min-width: 300px;">
                <iframe src="https://www.google.com/maps/embed?pb=..." width="100%" height="250" style="border:0; border-radius:10px;" loading="lazy"></iframe>
            </div>
            <div>
                <h4>📍 PHÒNG KHOA HỌC CÔNG NGHỆ</h4>
                <p><strong>Phòng:</strong> B.02-01</p>
                <p><strong>Địa chỉ:</strong> 475A, Điện Biên Phủ, P.25, Q.Bình Thạnh, TP.HCM</p>
                <p><strong>Điện thoại:</strong> 028 5445 4886 - 0818 437 136</p>
                <p><strong>Email:</strong> <a href="mailto:khcn@tl.edu.vn" style="color: #ffeb3b;">khcn@tl.edu.vn</a></p>
                <div class="social-icons">
                    <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/1384/1384005.png" alt="Facebook" /></a>
                    <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/1384/1384060.png" alt="YouTube" /></a>
                    <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/5968/5968804.png" alt="Twitter" /></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById("userDropdown");
            if (dropdown) dropdown.classList.toggle("active");
        }

        document.addEventListener("click", function (event) {
            const dropdown = document.getElementById("userDropdown");
            const icon = document.querySelector(".user-icon");

            if (dropdown && icon && !icon.contains(event.target)) {
                dropdown.classList.remove("active");
            }
        });
    </script>
</body>
</html>
