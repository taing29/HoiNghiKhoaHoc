@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Thanh menu chính */
        .navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #0066cc;
        padding: 10px 20px;
        color: white;
        position: relative;
        }

        /* Icon menu trái */
        .menu-icon {
        font-size: 24px;
        cursor: pointer;
        margin-right: 15px;
        }

        /* Logo */
        .logo img {
        height: 40px;
        margin-right: 20px;
        }

        /* Menu trung tâm */
        .nav-links {
        list-style: none;
        display: flex;
        flex: 1;
        justify-content: center;
        padding: 0;
        margin: 0;
        }

        .nav-links li {
        margin: 0 10px;
        padding: 10px 15px;
        border-radius: 6px;
        transition: 0.3s;
        }

        .nav-links li:hover {
        background-color: #0055aa;
        transform: scale(1.05);
        }

        .nav-links li a {
        text-decoration: none;
        color: white;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 13px;
        }

        /* Dropdown menu */
        .user-icon {
        position: relative;
        cursor: pointer;
        }

        .user-icon img {
        height: 30px;
        width: 30px;
        border-radius: 50%;
        }

        .dropdown {
        display: none;
        position: absolute;
        right: 0;
        top: 100%;
        background-color: #0055aa;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        min-width: 150px;
        }

        .dropdown.active {
        display: block;
        }

        .dropdown a {
        display: block;
        padding: 10px 15px;
        color: white;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.3s;
        }

        .dropdown a:hover {
        background-color: #004488;
        }

        /* Phần thân */
        .news-card {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 20px;
        margin: 20px auto;
        max-width: 800px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .news-card img {
        width: 100%;
        height: auto;
        margin: 10px 0;
        }

        /* Footer */
        .footer-tl {
        background-color: #0066cc;
        color: white;
        padding: 20px 30px;
        font-size: 14px;
        margin-top: 40px;
        }

        .footer-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: auto;
        padding: 0 20px;
        }

        .footer-left {
        max-width: 60%;
        }

        .footer-left a {
        color: #ffeb3b;
        text-decoration: none;
        }

        .footer-right {
        text-align: right;
        }

        .footer-right a {
        color: white;
        text-decoration: none;
        margin: 0 5px;
        font-weight: bold;
        }

        .social-icons {
        margin-top: 10px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 12px;
        }

        .social-icons img {
        height: 28px;
        width: 28px;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 50%;
        }

        .social-icons img:hover {
        transform: scale(1.2);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Responsive */
        media (max-width: 768px) {
        .nav-links

        {
        display: none;
        }

        .menu-icon {
        display: block;
        }

        .footer-container {
        flex-direction: column;
        align-items: flex-start;
        }

        .footer-right {
        text-align: left;
        margin-top: 15px;
        }

        }
    </style>
</head>
<body>
    <!-- Thanh điều hướng -->
    <header>
        <div class="navbar">
            <div class="menu-icon">☰</div>
            <nav>
                <ul class="nav-links">
                    
                    <li>@Html.ActionLink("Trang chủ", "Index", "Conferences")</li>
                    <li>@Html.ActionLink("Hội nghị sắp diễn ra", "Upcoming", "Conferences")</li>
                    <li>@Html.ActionLink("Hội nghị đã diễn ra", "Past", "Conferences")</li>
                    <li>@Html.ActionLink("Hội nghị trên thế giới", "International", "Conferences")</li>
                    @{
                        var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
                        var avatarUrl = currentUser?.AvatarPath ?? "https://cdn-icons-png.flaticon.com/512/747/747376.png";
                        var fullName = currentUser?.FullName ?? "Người dùng";
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="d-flex align-items-center">
                            <img src="@avatarUrl" alt="Avatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" />
                            <span class="text-white fw-bold">Xin chào, @fullName!</span>
                        </li>
                    }
                    else
                    {
                        <li><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a></li>
                        <li><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a></li>
                    }
                    
                </ul>
                
            </nav>
          <div class="user-icon" onclick="toggleDropdown()">
                <img src="https://cdn-icons-png.flaticon.com/512/747/747376.png" alt="Ảnh đại diện" />
              <div class="dropdown" id="userDropdown">
              <a href="@Url.Action("Index", "Users", new { area = "Admin" })">Quản lý người dùng</a>
              <a href="@Url.Action("Logout", "Account", new { area = "Identity" })">Đăng xuất</a>
             </div>
             </div>

                    @* <a href="@Url.Action("Login", "Account", new { area = "Identity" })">Đăng nhập</a>
                    <a href="@Url.Action("Logout", "Account", new { area = "Identity" })">Đăng xuất</a>
                    <a href="@Url.Action("Manage", "Account", new { area = "Identity" })">Hồ sơ</a> *@
            
            </div>
        </div>
    </header>

    <!-- Tiêu đề "Tin tức" -->
    <h1 style="text-align: center; margin: 20px;">Tin tức</h1>
    @RenderBody()
    @RenderSection("Scripts", required: false)

    <footer class="footer-tl">
        <div class="footer-container">
            <div class="footer-map" style="flex: 1; min-width: 300px; margin-bottom: 20px;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.1265614720305!2d106.70969229678956!3d10.801617500000011!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528d9f01a6ef7%3A0x1e4d04b2f5772d3b!2sHUTECH!5e0!3m2!1svi!2s!4v1713502248467!5m2!1svi!2s"
                        width="100%"
                        height="250"
                        style="border:0; border-radius: 10px;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
            <div class="footer-right">
                <h3>PHÒNG KHOA HỌC CÔNG NGHỆ</h3>
                <p><strong>Phòng:</strong> B.02-01</p>
                <p><strong>Địa chỉ:</strong> 475A, Điện Biên Phủ, P.25, Q.Bình Thạnh, TP.HCM</p>
                <p><strong>Điện thoại:</strong> 028 5445 4886 - 0818 437 136</p>
                <p>
                    ✉️ <strong>Email:</strong>
                    <a href="mailto:khcn@tl.edu.vn" style="color: #ffdd57; text-decoration: none;">khcn@tl.edu.vn</a>
                </p>
                <div>
                    <a href="#" style="color: #ffffff; margin-right: 15px; text-decoration: underline;">Trang chủ</a>
                    <a href="#" style="color: #ffffff; margin-right: 15px; text-decoration: underline;">Sơ đồ</a>
                    <a href="#" style="color: #ffffff; text-decoration: underline;">Liên hệ</a>
                </div>
                <div class="social-icons">
                    <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/1384/1384005.png" alt="Facebook" style="width: 28px; margin-right: 12px;" /></a>
                    <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/1384/1384060.png" alt="YouTube" style="width: 28px; margin-right: 12px;" /></a>
                    <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/5968/5968804.png" alt="X" style="width: 28px;" /></a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.classList.toggle('active');
        }

        // Đóng dropdown khi click ra ngoài
        document.addEventListener('click', function (event) {
            const dropdown = document.getElementById('userDropdown');
            const userIcon = document.querySelector('.user-icon');
            if (!userIcon.contains(event.target)) {
                dropdown.classList.remove('active');
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>