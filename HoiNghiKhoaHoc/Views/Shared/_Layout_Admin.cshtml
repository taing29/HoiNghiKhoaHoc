
@{
    ViewData["Title"] = "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar col-md-2">
        <h4 class="px-3">Quản trị</h4>
        <a class="active" href="#">Bảng điều khiển</a>
        <a href="@Url.Action("Index", "Users", new { area = "Admin" })">Quản lý người dùng</a>
        <a href="/Admin/Conferences">Quản lý hội nghị</a>
        <a href="/Admin/Categories">Quản lý danh mục</a>
        <a href="/Admin/Speakers">Quản lý diễn giả</a>
    </div>

    <!-- Content -->
    <div class="main-content col-md-10">
        <header class="d-flex justify-content-between mb-4">
            <h2>@ViewData["Title"]</h2>
            <div>
                <span class="me-3"><i class="fas fa-user-circle"></i> Admin</span>
                <a href="@Url.Action("Login", "Account", new { area = "Identity" })">Đăng xuất</a>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>
</div>

<style>
    body {
        background-color: #f4f4f9;
    }

    .sidebar {
        height: 100vh;
        background-color: #7c3aed;
        color: white;
        padding-top: 1rem;
    }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 12px 20px;
        }

            .sidebar a:hover {
                background-color: #6d28d9;
            }

        .sidebar .active {
            background-color: #6d28d9;
            font-weight: bold;
        }

    .main-content {
        padding: 30px;
    }

    .card-box {
        border-radius: 15px;
        padding: 20px;
        color: white;
    }

    .bg-gradient-orange {
        background: linear-gradient(to right, #fda085, #f6d365);
    }

    .bg-gradient-blue {
        background: linear-gradient(to right, #4facfe, #00f2fe);
    }

    .bg-gradient-green {
        background: linear-gradient(to right, #43e97b, #38f9d7);
    }
</style>
