@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>

@{
    ViewData["Title"] = "Hội nghị sắp diễn ra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .conference-card {
        display: inline-block;
        width: 300px;
        margin: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
        vertical-align: top;
    }

        .conference-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .conference-card .content {
            padding: 10px;
        }

        .conference-card h3 {
            font-size: 18px;
            margin: 0 0 10px;
            color: #000;
        }

        .conference-card p {
            font-size: 14px;
            margin: 5px 0;
            color: #666;
        }

        .conference-card .details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background: #f8f9fa;
        }

            .conference-card .details a {
                text-decoration: none;
                color: #fff;
                font-weight: bold;
                margin-left: 5px;
            }
</style>

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div>
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="conference-card">
                <img src="@Url.Content("~/uploads/" + item.BannerImage)" alt="Conference Image" />
                <div class="content">
                    <h3>@item.Title</h3>
                    <p>Thời gian: @item.StartDate.ToString("dd/MM/yyyy HH:mm") - @item.EndDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>Địa điểm: @item.Location</p>
                    <p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Xem chi tiết</a>
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <p>Không có hội nghị sắp diễn ra.</p>
    }
</div>