@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>
@{
    ViewData["Title"] = "Danh sách Hội nghị";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var favorites = ViewBag.FavoriteIds as List<int> ?? new List<int>();
}

<!-- Bootstrap Icons (chỉ thêm 1 lần trong layout nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .conference-card {
        display: inline-block;
        width: 300px;
        margin: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        background: #fff;
        vertical-align: top;
        transition: transform 0.3s ease;
    }

        .conference-card:hover {
            transform: translateY(-5px);
        }

        .conference-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
        }

        .conference-card .content {
            padding: 15px;
        }

        .conference-card h3 {
            font-size: 18px;
            margin-bottom: 8px;
            color: #0055aa;
        }

        .conference-card p {
            font-size: 14px;
            margin-bottom: 5px;
            color: #333;
        }

    .heart-icon {
        font-size: 20px;
        margin-left: 5px;
    }
</style>

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="d-flex flex-wrap justify-content-start">
    @foreach (var item in Model)
    {
        var isFavorite = favorites.Contains(item.Id);
        <div class="conference-card">
            <img src="@Url.Content("~/uploads/" + item.BannerImage)" alt="Conference Image" />
            <div class="content">
                <h3 class="mb-2">@item.Title</h3>
                <p><strong>Thời gian:</strong> @item.StartDate.ToString("dd/MM/yyyy HH:mm") - @item.EndDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Địa điểm:</strong> @item.Location</p>

                <!-- Trái tim và nút xem chi tiết nằm cùng hàng -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        @if (isFavorite)
                        {
                            <span class="text-danger heart-icon" title="Đã yêu thích"><i class="bi bi-heart-fill"></i></span>
                        }
                        else
                        {
                            <span class="text-muted heart-icon" title="Chưa yêu thích"><i class="bi bi-heart"></i></span>
                        }
                    </div>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
