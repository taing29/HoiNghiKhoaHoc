@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>

@{
    ViewData["Title"] = "Danh sách Hội nghị";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .conference-card {
        display: inline-block;
        width: 300px;
        margin: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: #fff;
        vertical-align: top;
    }

        .conference-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .conference-card .content {
            padding: 10px;
        }

        .conference-card h3 {
            font-size: 18px;
            margin: 0 0 10px;
            color: #fff;
        }

        .conference-card p {
            font-size: 14px;
            margin: 5px 0;
            color: #666;
        }

        .conference-card .details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background: #f8f9fa;
        }

            .conference-card .details a {
                text-decoration: none;
                color: #fff;
                font-weight: bold;
                margin-left: 5px;
            }

</style>

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div>
    @foreach (var item in Model)
    {
        <div class="conference-card">
            <img src="https://cellphones.com.vn/sforum/wp-content/uploads/2024/02/avatar-anh-meo-cute-3.jpg" alt="Conference Image" />
            <div class="content">
                <h3>@item.Title</h3>
                <p>Thời gian: @item.StartDate.ToString("dd/MM/yyyy HH:mm") - @item.EndDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p>Địa điểm: @item.Location</p>
                <p>We invite you to submit your work to the International Conference on Environmental Design (ICED2025), 1-2 November 2025, Heraklion, Crete, Greece and Virtual.</p>
            </div>
        </div>
    }
    @* <a asp-area="Admin" asp-action="Create" class="btn btn-primary">Tạo mới</a> *@
</div>