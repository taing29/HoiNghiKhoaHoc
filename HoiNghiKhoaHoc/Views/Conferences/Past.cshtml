@model IEnumerable<HoiNghiKhoaHoc.Models.Conference>
@{
    ViewData["Title"] = "Hội nghị đã diễn ra";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var favorites = ViewBag.FavoriteIds as List<int> ?? new List<int>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="/css/style.css" />

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage as string))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="container-fluid px-0">
    <h2 class="text-center my-4 fw-bold">@ViewData["Title"]</h2>
    <div class="row g-4 mx-0 px-3">
        @foreach (var item in Model)
        {
            var isFavorite = favorites.Contains(item.Id);
            <div class="col-sm-6 col-md-4 col-lg-4 d-flex">
                <div class="conference-card w-100 d-flex flex-column p-0 shadow-sm rounded">
                    <div class="card-image-wrapper">
                        <img src="@Url.Content("~/uploads/" + item.BannerImage)"
                             class="conference-image"
                             alt="@item.Title" />
                    </div>
                    <div class="p-3 flex-grow-1 d-flex flex-column">
                        <h5 class="conference-title mb-1">@item.Title</h5>
                        <small class="text-muted">
                            @item.StartDate.ToString("dd/MM/yyyy HH:mm") - @item.EndDate.ToString("dd/MM/yyyy HH:mm")
                        </small>
                        <p class="conference-description text-truncate mt-2 mb-3">@item.Description</p>
                        <p class="conference-info mb-3">
                            <i class="bi bi-geo-alt-fill"></i> @item.Location
                        </p>

                        <div class="mt-auto d-flex gap-2 align-items-center">
                           
                            <a asp-action="Details"
                               asp-controller="Conferences"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-info-circle"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
