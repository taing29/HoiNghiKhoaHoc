@model HoiNghiKhoaHoc.Models.ViewModels.ConferenceDetailViewModel

@{
    ViewData["Title"] = Model.CurrentConference.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <img src="~/uploads/@Model.CurrentConference.BannerImage" class="img-fluid mb-4" width="100%" alt="Banner" />

    <div class="row px-3 px-md-4">
        <!-- Nội dung chính -->
        <div class="col-md-8 mb-4">
            <div class="bg-white rounded shadow p-4 h-100">
                <h2 class="mb-4">@Model.CurrentConference.Title</h2>

                <div class="d-flex align-items-center mb-3">
                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Author" width="60" class="me-3" />
                    <div>
                        <strong>@Model.CurrentConference.Organizer</strong><br />
                        <small class="text-muted">Ngày bắt đầu: @Model.CurrentConference.StartDate:dd/MM/yyyy</small>
                    </div>
                </div>

                <p>@Model.CurrentConference.Description</p>

                @if (!string.IsNullOrEmpty(Model.CurrentConference.Content))
                {
                    <div>@Html.Raw(Model.CurrentConference.Content)</div>
                }

                @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                {
                    <!-- Nút yêu thích -->
                    <div class="mt-3">
                        @if (Model.IsFavorite)
                        {
                            <form asp-action="RemoveFromFavorites" method="post" class="d-inline">
                                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                                <button type="submit" class="btn btn-outline-danger">❤️ Đã yêu thích – Bỏ</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="AddToFavorites" method="post" class="d-inline">
                                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                                <button type="submit" class="btn btn-outline-danger">🤍 Thêm vào yêu thích</button>
                            </form>
                        }
                    </div>

                    <!-- Nút đăng ký -->
                    <div class="mt-3">
                        @if (Model.IsRegistered)
                        {
                            <form asp-action="CancelRegistration" method="post" class="d-inline">
                                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                                <button type="submit" class="btn btn-danger">❌ Hủy đăng ký</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Register" method="post" class="d-inline">
                                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                                <button type="submit" class="btn btn-success">✅ Đăng ký tham gia</button>
                            </form>
                        }
                    </div>
                }

                <!-- Thông tin bổ sung -->
                <div class="mt-4">
                    <p><strong>Thời gian kết thúc:</strong> @Model.CurrentConference.EndDate:dd/MM/yyyy</p>
                    <p><strong>Ngày tạo:</strong> @Model.CurrentConference.CreatedDate:dd/MM/yyyy</p>
                    <p><strong>Trạng thái:</strong>
                        @if (Model.CurrentConference.IsActive)
                        {
                            <span class="text-success">Đang hoạt động</span>
                        }
                        else
                        {
                            <span class="text-danger">Ngưng hoạt động</span>
                        }
                    </p>
                    <p><strong>Chuyên mục:</strong> @Model.CurrentConference.Category?.Name</p>
                </div>

                <!-- Từ khóa -->
                <div class="mb-3 mt-4">
                    <span class="badge bg-secondary">AI</span>
                    <span class="badge bg-secondary">Hội nghị</span>
                    <span class="badge bg-secondary">Giáo dục</span>
                    <span class="badge bg-secondary">Nghiên cứu</span>
                    <span class="badge bg-secondary">Công nghệ</span>
                </div>
            </div>
        </div>

        <!-- Thông tin tác giả -->
        <div class="col-md-4 mb-4">
            <div class="bg-white rounded shadow p-4">
                <h4>Thông tin tác giả</h4>
                <div class="d-flex align-items-center border p-3 rounded shadow-sm">
                    <img src="https://bootdey.com/img/Content/avatar/avatar6.png" width="60" height="60" class="me-3 rounded-circle" />
                    <h6 class="mb-0">@Model.CurrentConference.Organizer</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hội nghị liên quan -->
<div class="container mt-5">
    <h4 class="mb-4 text-center">Hội nghị liên quan</h4>
    <div class="row g-3 justify-content-center">
        @foreach (var item in Model.RelatedConferences)
        {
            <div class="col-6 col-md-3">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content("~/uploads/" + item.BannerImage)" class="card-img-top" alt="@item.Title" />
                        <div class="card-body p-2">
                            <h6 class="card-title mb-1">@item.Title</h6>
                            <small class="text-muted d-block">@item.StartDate:dd/MM/yyyy</small>
                            <small class="text-muted">@item.Location</small>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
