@using System.Text.RegularExpressions
@model HoiNghiKhoaHoc.Models.ViewModels.ConferenceDetailViewModel

@{
    ViewData["Title"] = Model.CurrentConference.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.CurrentConference.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <style>
        .card {
            margin: 15px 0;
        }

        .author-box img {
            border-radius: 50%;
        }

        .badge {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Banner -->
        <img src="~/uploads/@Model.CurrentConference.BannerImage" class="img-fluid mb-4" width="100%" alt="Banner">

    <div class="row px-3 px-md-4">
        <!-- Nội dung chính -->
        <div class="col-md-8 mb-4">
            <div class="bg-white rounded shadow p-4 h-100">
                <h2 class="mb-4">@Model.CurrentConference.Title</h2>

                <div class="d-flex align-items-center mb-3">
                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Author" width="60" class="me-3" />
                    <div>
                        <strong>@Model.CurrentConference.Organizer</strong><br />
                        <small class="text-muted">Ngày bắt đầu: @Model.CurrentConference.StartDate:dd/MM/yyyy</small>
                    </div>
                </div>

                    @if (!string.IsNullOrEmpty(Model.CurrentConference.Content))
                    {
                        var paragraphs = Regex.Split(Model.CurrentConference.Content, @"<\/p\s*>", RegexOptions.IgnoreCase)
                      .Where(p => !string.IsNullOrWhiteSpace(p))
                      .ToList();
                        var images = Model.CurrentConference.Images?.ToList() ?? new List<ConferenceImage>();
                        var imgIndex = 0;

                        <div class="conference-content">
                            @for (int i = 0; i < paragraphs.Count; i++)
{
    <p class="rich-content">@Html.Raw(paragraphs[i])</p>

    if (imgIndex < images.Count)
    {
        <div class="text-center my-3">
            <img src="@Url.Content("~/uploads/" + images[imgIndex].ImageUrl)" class="img-fluid w-50 rounded shadow-sm" alt="Ảnh minh họa" />
        </div>
        imgIndex++;
    }
}
                        </div>
                    }
                @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
{
    <!-- Nút yêu thích -->
    <div class="mt-3">
        @if (Model.IsFavorite)
        {
            <form asp-action="RemoveFromFavorites" method="post" class="d-inline">
                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                <button type="submit" class="btn btn-outline-danger">❤️ Đã yêu thích – Bỏ</button>
            </form>
        }
        else
        {
            <form asp-action="AddToFavorites" method="post" class="d-inline">
                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                <button type="submit" class="btn btn-outline-danger">🤍 Thêm vào yêu thích</button>
            </form>
        }
    </div>

    <!-- Nút đăng ký -->
    <div class="mt-3">
        @if (Model.IsRegistered)
        {
            <form asp-action="CancelRegistration" method="post" class="d-inline">
                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                <button type="submit" class="btn btn-danger">❌ Hủy đăng ký</button>
            </form>
        }
        else
        {
            <form asp-action="Register" method="post" class="d-inline">
                <input type="hidden" name="conferenceId" value="@Model.CurrentConference.Id" />
                <button type="submit" class="btn btn-success">✅ Đăng ký tham gia</button>
            </form>
        }
    </div>
}
                    <!-- Thông tin bổ sung -->
                    <div class="mt-4">
                        <p><strong>Thời gian kết thúc:</strong> @Model.CurrentConference.EndDate.ToString("dd/MM/yyyy")</p>
                        <p><strong>Ngày tạo:</strong> @Model.CurrentConference.CreatedDate.ToString("dd/MM/yyyy")</p>
                        <p>
                            <strong>Trạng thái:</strong>
                            @if (Model.CurrentConference.IsActive)
                            {
                                <span class="text-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="text-danger">Ngưng hoạt động</span>
                            }
                        </p>
                        <p><strong>Chuyên mục:</strong> @Model.CurrentConference.Category?.Name</p>
                    </div>
                    @if (Model.Sessions != null && Model.Sessions.Any())
{
    <div class="mt-5">
        <h4 class="mb-3">Các phiên hội nghị</h4>
        <ul class="list-group">
            @foreach (var session in Model.Sessions.OrderBy(s => s.StartTime))
            {
                <li class="list-group-item">
                    <h5>@session.Title</h5>
                    <p class="mb-1">
                        <strong>Thời gian:</strong>
                        @session.StartTime.ToString("HH:mm dd/MM/yyyy") - @session.EndTime.ToString("HH:mm dd/MM/yyyy")
                    </p>
                    <p class="mb-1">
                        <strong>Phòng:</strong> @session.Location
                    </p>
                    @if (!string.IsNullOrWhiteSpace(session.Description))
                    {
                        <p>@session.Description</p>
                    }
                </li>
            }
        </ul>
    </div>
}

                    
                    <!-- Từ khóa -->
                    <div class="mb-3 mt-4">
                        <span class="badge bg-secondary">AI</span>
                        <span class="badge bg-secondary">Hội nghị</span>
                        <span class="badge bg-secondary">Giáo dục</span>
                        <span class="badge bg-secondary">Nghiên cứu</span>
                        <span class="badge bg-secondary">Công nghệ</span>
                    </div>

                    <!-- Form bình luận -->
                    <h4 class="mt-5 mb-3">Gửi bình luận</h4>
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Tên *" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" placeholder="Email *" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="4" placeholder="Nội dung *" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gửi</button>
                    </form>
                </div>
            </div>

            
            <!-- Diễn giả hội nghị -->
@if (Model.Speakers?.Any() == true)
{
    <div class="col-md-4 mb-4">
        <div class="bg-white rounded shadow p-4">
            <h4 class="mb-4 text-center">Diễn giả hội nghị</h4>
            @foreach (var item in Model.Speakers)
            {
                <div class="text-center mb-4">
                    <img src="@(!string.IsNullOrEmpty(item.Speaker.PhotoUrl) ? Url.Content("~/uploads/" + item.Speaker.PhotoUrl) : "https://bootdey.com/img/Content/avatar/avatar1.png")"
                         alt="Ảnh diễn giả"
                         class="rounded-circle mb-2"
                         style="width: 80px; height: 80px; object-fit: cover;" />
                    <h6 class="mb-1 text-primary">@item.Speaker.FullName</h6>
                    @if (!string.IsNullOrWhiteSpace(item.Speaker.Title))
                    {
                        <p class="text-muted mb-1" style="font-size: 0.9rem;">@item.Speaker.Title</p>
                    }
                    <div>
                        @if (item.IsKeynote)
                        {
                            <span class="badge bg-success mb-1">Keynote</span>
                        }
                        @if (item.IsPanelist)
                        {
                            <span class="badge bg-info text-dark mb-1">Panelist</span>
                        }
                    </div>
                    <hr />
                </div>
            }
        </div>
    </div>
}

        </div>
    </div>

    <!-- Hội nghị liên quan -->
    <div class="container mt-5">
        <h4 class="mb-4 text-center">Hội nghị liên quan</h4>
        <div class="row g-3 justify-content-center">
            @foreach (var item in Model.RelatedConferences)
            {
                <div class="col-6 col-md-3">
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm">
                            <img src="@Url.Content("~/uploads/" + item.BannerImage)" class="card-img-top" alt="@item.Title">
                            <div class="card-body p-2">
                                <h6 class="card-title mb-1">@item.Title</h6>
                                <small class="text-muted d-block">@item.StartDate.ToString("dd/MM/yyyy")</small>
                                <small class="text-muted">@item.Location</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

